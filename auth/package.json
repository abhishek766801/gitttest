{
  "name": "auth",
  "type": "module",
  "module": "commonjs",
  "version": "1.0.0",
  "description": "Authentication microservice for our social media app.",
  "main": "app.ts",
  "scripts": {
    "lint": "eslint src",
    "lint:staged": "lint-staged",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "start": "NODE_ENV=production ts-node src/index.js",
    "stop": "taskkill -f -im node.exe",
    "start:dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --verbose --watchAll --no-cache --runInBand",
    "tsc:check": "tsc --noEmit"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "testEnvironment": "node",
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "./src/test-utils/setup-after-env.ts"
    ]
  },
  "keywords": [],
  "author": "Lauro Fialho MÃ¼ller",
  "license": "ISC",
  "dependencies": {
    "body-parser": "1.19.0",
    "dotenv-safe": "8.2.0",
    "express": "^4.18.2",
    "express-async-errors": "3.1.1",
    "express-validator": "^6.9.2",
    "mongoose": "5.11.15",
    "nodemailer": "6.4.17",
    "nodemon": "2.0.7",
    "ts-node": "9.1.1",
    "mongodb-memory-server": "^9.0.1",
    "typescript": "4.1.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.2",
    "@types/dotenv-safe": "8.1.1",
    "@types/express": "4.17.11",
    "@types/jest": "^29.5.6",
    "@types/mongoose": "5.10.3",
    "@types/node": "14.14.25",
    "@types/nodemailer": "6.4.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "babel-jest": "^29.7.0",
    "eslint": "7.19.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.1",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "mongodb-memory-server": "^9.0.1",
    "prettier": "2.2.1",
    "supertest": "6.1.3",
    "ts-jest": "^26.5.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier:fix",
      "npm run lint",
      "npm run test",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
